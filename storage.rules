rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin to read/write their own profile images
    match /admin-profiles/{userId}-{timestamp} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Catch-all for admin-profiles directory
    match /admin-profiles/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
